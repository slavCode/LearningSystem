@model HomeIndexViewModel
@{
    ViewData["Title"] = "Courses";

    var previousDisabled = this.Model.CurrentPage == 1 ? "disabled" : String.Empty;
    var nextDisabled = this.Model.CurrentPage == this.Model.TotalPages ? "disabled" : String.Empty;

}
<div class="jumbotron home-jumbotron">
    <h4 class="jumbotron-header">GET STARTED WITH ONLINE COURSES</h4>
    <h1 class="jumbotron-body">BEST ONLINE</h1>
    <h1 class="jumbotron-body">LEARNING SYSTEM</h1>
    <br />
    <h4 class="jumbotron-body"><strong>Learning System</strong> is a global marketplace for learning and teaching online where students are mastering new skills and achieving their goals by learning from an extensive library of over 65,000 courses taught by expert instructors.</h4>
</div>
<br />
<div class="text-center">
    <div class="row">
        <form asp-action="Search">
            <div class="col-md-8">
                <div class="search-widget flex flex-wrap align-items-center">
                    <input asp-for="Term" type="search" placeholder="Search...">
                    <button type="submit" class="flex justify-content-center align-items-center"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="col-md-2">
                <label class="container-chkbox">
                    Courses
                    <input asp-for="InCourses" type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="col-md-2">
                <label class="container-chkbox">
                    Users
                    <input asp-for="InUsers" type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
        </form>
    </div>
    <div class="row courses-title">
        <div class="col-12">
            <div class="breadcrumbs">
                <ul>
                    <li><a><i class="fa fa-graduation-cap"></i> @ViewData["Title"]</a></li>
                </ul>
            </div><!-- .breadcrumbs -->
        </div><!-- .col -->
    </div><!-- .row -->
    <div class="row home-page" id="course">
        @Html.Partial("_CoursesPartial", Model.Courses)
    </div>
    <ul class="pagination">
        <li class="page-item @previousDisabled">
            <a asp-controller="Home"
               asp-action="Index"
               asp-route-page="@Model.PreviousPage">Newer</a>
        </li>
        <li class="page-item @nextDisabled">
            <a asp-controller="Home"
               asp-action="Index"
               asp-route-page="@Model.NextPage">Older</a>
        </li>
    </ul>
</div>