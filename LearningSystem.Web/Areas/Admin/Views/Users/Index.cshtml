@model AdminUsersListingViewModel
@{
    ViewData["Title"] = "User Administration";
}

<div class="text-center">
        <div class="row" style="margin-top: -30px !important">
            <div class="col-12">
                <div class="breadcrumbs">
                    <ul>
                        <li>
                            <a style="font-size: 30px">
                                <i class="fas fa-users-cog"></i>@ViewData["Title"]
                            </a>
                        </li>
                    </ul>
                </div><!-- .breadcrumbs -->
            </div><!-- .col -->
        </div><!-- .row -->
    </div>

<table class="table-bordered table-hover table">
    <thead>
        <tr>
            <th class="col-md-4">Username</th>
            <th class="col-md-3">E-mail</th>
            <th class="col-md-5">Add To Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <form asp-controller="Users" asp-action="AddToRole" method="post">
                        <div class="row">
                            <div class="col-md-10">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select class="form-control" asp-items="@Model.Roles" name="RoleName">
                                    <option value="" class="hidden">Select Role..</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn-success btn-sm">Add</button>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

